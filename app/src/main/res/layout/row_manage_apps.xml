<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_margin="2dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/manage_app_icon"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/manage_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manage_app_icon" />

        <ImageButton
            android:id="@+id/manage_add_shortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Create Shortcut"
            android:src="@drawable/shortcut"
            app:layout_constraintEnd_toStartOf="@id/manage_freeze_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manage_app_name" />

        <ImageButton
            android:id="@+id/manage_freeze_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Freeze App"
            android:src="@drawable/snowflake"
            android:tint="@android:color/black"
            app:layout_constraintEnd_toEndOf="@id/manage_untrack_app"
            app:layout_constraintStart_toEndOf="@id/manage_add_shortcut"
            app:layout_constraintTop_toBottomOf="@id/manage_app_name" />

        <ImageButton
            android:id="@+id/manage_untrack_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Untrack App"
            android:src="@drawable/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/manage_freeze_app"
            app:layout_constraintTop_toBottomOf="@id/manage_app_name" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>